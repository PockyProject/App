<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/moreTopTextBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@id/moreLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.2">

        <TextView
            android:id="@+id/moreTopText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="24dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|bottom"
            android:text="손 안의 키오스크," />

        <TextView
            android:id="@+id/moreTopText2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="36dp"
            android:paddingTop="30dp"
            android:textColor="@color/signature"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|top"
            android:text="Pocky" />

    </LinearLayout>

    <ImageView
        android:id="@+id/moreLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/pocki_icon"
        app:layout_constraintBottom_toTopOf="@id/moreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moreTopTextBox"
        app:layout_constraintVertical_weight="0.6" />

    <TextView
        android:id="@+id/moreText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/nanumbarungothicbold"
        android:gravity="top|center"
        android:textSize="16dp"
        android:padding="10dp"
        android:text="제작자\n\n정성욱\n정민우\n강주형\n한성진\n\nTanks to 강영명 교수님"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moreLogo"
        app:layout_constraintVertical_weight="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>